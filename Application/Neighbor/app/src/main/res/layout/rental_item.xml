<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <com.parse.ParseImageView
        android:id="@+id/itemPhoto"
        android:layout_width="175dp"
        android:layout_height="250dp"
        android:layout_below="@+id/itemName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/itemName"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textDescription"
        android:layout_alignTop="@+id/itemPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:layout_toLeftOf="@+id/itemPhoto"
        android:layout_toStartOf="@+id/itemPhoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location:"
        android:id="@+id/staticTextLocation"
        android:layout_below="@+id/itemPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/itemLocation"
        android:layout_below="@+id/itemPhoto"
        android:layout_alignBottom="@+id/staticTextLocation"
        android:layout_toLeftOf="@+id/itemPhoto"
        android:layout_toRightOf="@+id/staticTextLocation"
        android:layout_toEndOf="@+id/staticTextLocation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cost:"
        android:id="@+id/staticTextCost"
        android:layout_below="@+id/staticTextLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/itemCost"
        android:layout_below="@+id/staticTextLocation"
        android:layout_toRightOf="@+id/staticTextLocation"
        android:layout_alignBottom="@+id/staticTextCost"
        android:layout_alignRight="@+id/itemLocation"
        android:layout_alignEnd="@+id/itemLocation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/staticTextPer"
        android:layout_alignTop="@+id/itemCost"
        android:layout_toRightOf="@+id/itemCost"
        android:layout_alignBottom="@+id/itemCost"
        android:text="per" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/itemPerTime"
        android:layout_alignTop="@+id/staticTextPer"
        android:layout_toRightOf="@+id/staticTextPer"
        android:layout_alignBottom="@+id/staticTextPer"
        android:layout_alignRight="@+id/itemPhoto"
        android:layout_alignEnd="@+id/itemPhoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Owner:"
        android:id="@+id/staticTextOwner"
        android:layout_below="@+id/staticTextCost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rent"
        android:id="@+id/rentItemButton"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/staticTextOwner"
        android:layout_alignRight="@+id/staticTextPer"
        android:layout_alignEnd="@+id/staticTextPer" />

</RelativeLayout>
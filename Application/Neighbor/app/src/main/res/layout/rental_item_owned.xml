<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <com.parse.ParseImageView
        android:id="@+id/userProfilePicture"
        android:layout_width="175dp"
        android:layout_height="250dp"
        android:layout_below="@+id/itemName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/itemName"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/itemDescription"
        android:layout_marginTop="31dp"
        android:layout_alignTop="@+id/userProfilePicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/userProfilePicture"
        android:layout_toStartOf="@+id/userProfilePicture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location:"
        android:id="@+id/staticTextLocation"
        android:layout_below="@+id/userProfilePicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_green_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/itemLocation"
        android:layout_alignTop="@+id/staticTextLocation"
        android:layout_alignRight="@+id/userProfilePicture"
        android:layout_alignEnd="@+id/userProfilePicture"
        android:layout_alignBottom="@+id/staticTextLocation"
        android:layout_toRightOf="@+id/staticTextLocation"
        android:layout_toEndOf="@+id/staticTextLocation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cost:"
        android:id="@+id/staticTextCost"
        android:layout_below="@+id/staticTextLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_red_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/itemCost"
        android:layout_below="@+id/staticTextLocation"
        android:layout_toRightOf="@+id/staticTextCost"
        android:layout_alignBottom="@+id/staticTextCost"
        android:layout_alignRight="@+id/itemLocation"
        android:layout_alignEnd="@+id/itemLocation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rented to:"
        android:id="@+id/textView"
        android:layout_below="@+id/staticTextCost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_blue_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/renterName"
        android:layout_below="@+id/itemCost"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#09F"/>

</RelativeLayout>
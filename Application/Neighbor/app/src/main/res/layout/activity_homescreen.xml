<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.csci4448.android.neighbor.HomescreenActivity">

    <com.parse.ParseImageView
        android:id="@+id/userProfilePicture"
        android:layout_width="175dp"
        android:layout_height="225dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_item_edittext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/search_item_hint"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Item"
        android:id="@+id/post_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/search_item_edittext" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/search_button"
        android:layout_below="@+id/post_item"
        android:layout_toRightOf="@+id/search_item_edittext"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome "
        android:id="@+id/staticWelcome"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/userName"
        android:layout_alignTop="@+id/staticWelcome"
        android:layout_toRightOf="@+id/staticWelcome"
        android:layout_toEndOf="@+id/staticWelcome" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Items I own"
        android:id="@+id/viewItemsOwnedButton"
        android:layout_above="@+id/post_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:layout_toLeftOf="@+id/viewRentingItemsButton"
        android:layout_toStartOf="@+id/viewRentingItemsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Items I am Renting"
        android:id="@+id/viewRentingItemsButton"
        android:layout_alignTop="@+id/viewItemsOwnedButton"
        android:layout_toRightOf="@+id/userProfilePicture"
        android:layout_toEndOf="@+id/userProfilePicture" />


</RelativeLayout>

